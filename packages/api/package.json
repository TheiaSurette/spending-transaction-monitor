{
  "name": "@spending-monitor/api",
  "private": true,
  "version": "0.0.0",
  "description": "FastAPI backend application",
  "scripts": {
    "install:deps": "uv sync --extra dev && uv pip install -e ../db",
    "dev": "bash -c 'uv run uvicorn src.main:app --reload --host 0.0.0.0 --port \"${API_PORT:-8000}\"'",
    "start": "bash -c 'uv run uvicorn src.main:app --host 0.0.0.0 --port \"${API_PORT:-8000}\"'",
    "test": "uv run pytest",
    "lint": "uv run ruff check .",
    "lint:fix": "uv run ruff check . --fix",
    "format": "uv run ruff format .",
    "format:check": "uv run ruff format . --check",
    "type-check": "uv run mypy src/"
  }
}
